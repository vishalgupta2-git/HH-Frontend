{
  "expo": {
    "name": "The Hindu Heritage",
    "slug": "HinduHeritageAppNew",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app-icon-1024x1024.png",
    "scheme": "hinduheritageappnew",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "icon": "./assets/app-icon-1024x1024.png"
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon-foreground.png",
        "backgroundImage": "./assets/app-icon-background.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.thehinduheritage.HinduHeritageAppNew"
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/app-icon-1024x1024.png"
    },

    "splash": {
      "image": "./assets/images/splash-screen-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-screen-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/splash-screen-logo.png",
            "backgroundColor": "#ffffff"
          }
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "3cc12f3d-2875-4e6e-925d-8a87fb15032f"
      }
    }
  }
}
